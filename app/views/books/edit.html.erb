<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title"  %>
	<h4>Body</h4>
	<%= f.text_area :body,class: "book_body" %>
	<br><%= f.submit 'Update Book' %></br>
<% end %>

<%= link_to "Show", book_path, class: "show_#{@book.id}" %>

